{
  "manifest_version": 2,
  "name": "NPO.nl subtitle player",
  "version": "0.0.1",
  "description": "Play video subtitles on NPO.nl website",
  "author": "Alexey Korepanov",
  "icons": {
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon128.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.npo.nl/*"
      ],
      "js": ["injected.js"]
    }
  ],
  "permissions": [
    "tabs",
    "storage",
    "*://klokhuis.nl/",
    "https://tt888.omroep.nl/"
   ]
}
